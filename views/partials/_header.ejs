<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      
    </div>
    <% if (username) { %>
    <form class="form-inline my-2 my-lg-0" action="/logout" method="POST">
      <label>Logged in as: <%= username %></label> 
      <button class="btn btn-outline-primary btn-sm" type="submit">Logout</button>
    </form>
    <% } else { %>
      <form class="form-inline my-2 my-lg-0" action="/login" method="POST">
        <input class="form-control form-control-sm mr-md-1" name="username" type="text" placeholder="Username" aria-label="Username">
        <button class="btn btn-outline-primary btn-sm" type="submit">Login</button>
      </form>
    <% }%> 
  </nav>
  
</header>


